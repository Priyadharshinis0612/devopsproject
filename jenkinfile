pipeline {
    agent any
     tools {
            nodejs 'NodeJS'
    }
    environment {
        // Define environment variables
        DOCKER_HUB_CREDENTIALS_ID = '03d192ab-0ad5-461f-832b-31a79bd24476'  // Jenkins credentials ID for Docker Hub login
        DOCKER_HUB_REPO = 'https://github.com/Priyadharshinis0612/devopsproject'   // Replace with your Docker Hub repo (e.g., 'username/repository')
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git repository
                git branch: 'main', credentialsId: '03d192ab-0ad5-461f-832b-31a79bd24476', url: 'https://github.com/Priyadharshinis0612/devopsproject'
            }
        }
        stage('Build') {
            steps {
                // Example build step (adjust to your environment)
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                // Deploy step (adjust to your environment)
                sh './deploy.sh'
            }
        }
    }
}
